<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/playerAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        tools:src="@drawable/avatar_player1" />

    <ImageView
        android:id="@+id/playerRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/playerAvatar"
        android:layout_alignLeft="@id/playerAvatar"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/playerAvatar"
        android:layout_alignTop="@id/playerAvatar"
        android:visibility="gone"
        tools:src="@drawable/player_buzz" />

    <ImageView
        android:id="@+id/playerBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bannerText"
        android:layout_centerVertical="true"
        android:src="@drawable/player_panel" />

    <LinearLayout
        android:id="@+id/bannerText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/playerAvatar"
        android:layout_alignTop="@id/playerAvatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-12dp"
        android:layout_toEndOf="@id/playerAvatar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minWidth="150dp"
        android:orientation="vertical"
        android:paddingLeft="18dp">

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:text="$100,000" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="Jay" />
    </LinearLayout>
</RelativeLayout>